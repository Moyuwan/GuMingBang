<?xml version="1.0" encoding="UTF-8"?>
 
<RadioGroup  
     xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_radio"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_gravity="bottom"
    android:background="@drawable/main_bg"
    android:gravity="bottom"
    android:orientation="horizontal" >

    <RadioButton
        android:id="@+id/radio_weekstar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:button="@null"
        android:background="@drawable/selector_tab_weekstar"
        android:gravity="center"
         />
    <RadioButton
        android:id="@+id/radio_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:background="@drawable/selector_tab_stock"
        android:gravity="center"
         />
   <RadioButton
        android:id="@+id/radio_forecaster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:background="@drawable/selector_tab_forecaster"
        android:gravity="center"
         />
    <RadioButton
        android:id="@+id/radio_uzone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:background="@drawable/selector_tab_uzone"
        android:gravity="center"
         />
    <RadioButton
        android:id="@+id/radio_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:background="@drawable/selector_tab_about"
        android:gravity="center"
         />
</RadioGroup>
